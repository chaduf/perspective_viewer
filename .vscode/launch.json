{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Perspective Viewer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/perspective-viewer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Show full container/string contents",
                    "text": "set print elements 0"
                },
                {
                    "description": "Enable pretty-print structures",
                    "text": "set print pretty on"
                }
            ],
            "preLaunchTask": "build-debug",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": false
            }
        },
        {
            "name": "Run Perpspective Viewer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Release/perspective-viewer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Release",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Show full container/string contents",
                    "text": "set print elements 0"
                },
                {
                    "description": "Enable pretty-print structures",
                    "text": "set print pretty on"
                }
            ],
            "preLaunchTask": "build-release"
        },
        {
            "name": "Run Unit Tests - Scene",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/scene/scene_unit_tests",
            "args": [
                "--gtest_color=yes"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/tests/scene",
